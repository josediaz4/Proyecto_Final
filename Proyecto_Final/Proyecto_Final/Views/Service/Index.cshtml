﻿
@model IEnumerable<Proyecto_Final.Data.Entidades.Service>

<style>
    #botones {
        visibility: hidden;
    }

    nav-item dropdown {
        visibility: visible;
    }
</style>
@{
    ViewData["Title"] = "Ml Peluqueria";
}
<br />
<br />
<p class="mt-5">
    <a asp-action="Create" class="btn btn-outline-primary">Crear Nuevo</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success">Regresar</a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Servicios</h3>
            </div>
            <div class="panel-body">
                <table class="table-hover table-responsive table-striped table" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th id="ocultar">
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th id="ocultar">
                                @Html.DisplayNameFor(model => model.Duration)
                            </th>
                            <th id="ocultar">
                                @Html.DisplayNameFor(model => model.ImageFullPath)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td id="ocultar">
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td id="ocultar">
                                    @Html.DisplayFor(modelItem => item.Duration) hs
                                </td>
                                <td id="ocultar">
                                    <img src="@item.ImageFullPath" style="width:100px; height:100px; border-radius:50px" />
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square fa-xl" style="color: #FFD43B;"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info fa-xl" style="color: #74C0FC;"></i></a>
                                    <a asp-controller="Servicio" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('¿Está seguro que desea eliminar este servicio?');"><i class="fa-solid fa-trash fa-xl" style="color: #cb4f3a;"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"    
                },
                "aLengthMenu": [
                    [10, 50, 100, -1],
                    [10, 50, 100, "Todos"]
                ]
            });
        });
    </script>
}

